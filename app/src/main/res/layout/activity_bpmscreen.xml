<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".activities.BPMScreen">

    <ImageView
        android:id="@+id/top_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="100dp"
        android:contentDescription="@string/bubble_top"
        android:src="@drawable/background_top_bpm"
        app:layout_constraintBottom_toBottomOf="@+id/bpm_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

    </ImageView>

    <TextView
        android:id="@+id/tvContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </TextView>

    <ImageView
        android:id="@+id/bottom_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:contentDescription="@string/network_image"
        android:src="@drawable/background_bottom_bpm"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/health_background">

    </ImageView>

    <androidx.cardview.widget.CardView
        android:id="@+id/bpm_background"
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:layout_marginHorizontal="50dp"
        android:layout_marginTop="60dp"
        android:backgroundTint="@color/white"
        app:cardCornerRadius="16dp"
        app:cardElevation="10dp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/bar_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="10dp"
                android:fontFamily="@font/firacode_regular"
                android:text="@string/graph_bpm_title"
                android:textColor="@color/app_yellow"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.github.mikephil.charting.charts.BarChart
                android:id="@+id/barchart"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="40dp"
                tools:layout_editor_absoluteX="10dp"
                tools:layout_editor_absoluteY="10dp">

            </com.github.mikephil.charting.charts.BarChart>

            <TextView
                android:id="@+id/graph_legendX"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:layout_marginStart="20dp"
                android:fontFamily="@font/firacode_light"
                android:text="@string/x_date_legend"
                android:textColor="@color/app_blue"
                android:textSize="11sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/barchart" />

            <TextView
                android:id="@+id/graph_legendY"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:layout_marginEnd="20dp"
                android:fontFamily="@font/firacode_light"
                android:text="@string/y_bpm_legend"
                android:textColor="@color/app_blue"
                android:textSize="11sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/barchart" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:id="@+id/health_background"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginHorizontal="50dp"
        android:layout_marginTop="40dp"
        android:backgroundTint="@color/white"
        app:cardCornerRadius="16dp"
        app:cardElevation="10dp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bpm_background">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/advice_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="10dp"
                android:fontFamily="@font/firacode_regular"
                android:text="@string/advice_title"
                android:textColor="@color/app_yellow"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/user_name_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="20dp"
                android:fontFamily="@font/firacode_regular"
                android:text="@string/advice_name_user_title"
                android:textColor="@color/app_yellow"
                android:textSize="11sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/advice_title" />

            <TextView
                android:id="@+id/user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="20dp"
                android:fontFamily="@font/firacode_semibold"
                android:text="@string/advice_name_user"
                android:textColor="@color/app_orange"
                android:textSize="10sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/user_name_title"
                app:layout_constraintTop_toBottomOf="@+id/advice_title" />

            <TextView
                android:id="@+id/user_age_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="50dp"
                android:fontFamily="@font/firacode_regular"
                android:text="@string/advice_age_user_title"
                android:textColor="@color/app_yellow"
                android:textSize="11sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/advice_title" />

            <TextView
                android:id="@+id/user_age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="50dp"
                android:fontFamily="@font/firacode_semibold"
                android:text="@string/advice_age_user"
                android:textColor="@color/app_orange"
                android:textSize="10sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/user_age_title"
                app:layout_constraintTop_toBottomOf="@+id/advice_title" />

            <TextView
                android:id="@+id/user_email_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="20dp"
                android:layout_marginStart="30dp"
                android:fontFamily="@font/firacode_regular"
                android:text="@string/advice_email_user_title"
                android:textColor="@color/app_yellow"
                android:textSize="11sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/user_name"
                app:layout_constraintTop_toBottomOf="@+id/advice_title" />

            <TextView
                android:id="@+id/user_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="20dp"
                android:fontFamily="@font/firacode_semibold"
                android:text="@string/advice_email_user"
                android:textColor="@color/app_orange"
                android:textSize="10sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/user_email_title"
                app:layout_constraintTop_toBottomOf="@+id/advice_title" />

            <TextView
                android:id="@+id/user_gender_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="50dp"
                android:layout_marginStart="30dp"
                android:fontFamily="@font/firacode_regular"
                android:text="@string/advice_gender_user_title"
                android:textColor="@color/app_yellow"
                android:textSize="11sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/user_name"
                app:layout_constraintTop_toBottomOf="@+id/advice_title" />

            <TextView
                android:id="@+id/user_gender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="50dp"
                android:fontFamily="@font/firacode_semibold"
                android:text="@string/advice_gender_user"
                android:textColor="@color/app_orange"
                android:textSize="10sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/user_gender_title"
                app:layout_constraintTop_toBottomOf="@+id/advice_title" />

            <TextView
                android:id="@+id/recommendation_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="30dp"
                android:fontFamily="@font/firacode_regular"

                android:text="@string/advice_recom_subtitle"
                android:textColor="@color/app_yellow"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/user_age_title" />

            <ImageView
                android:id="@+id/poor_bpm_img"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="20dp"
                android:src="@drawable/bpm_poor"
                app:layout_constraintStart_toStartOf="@id/recommendation_title"
                app:layout_constraintTop_toBottomOf="@id/recommendation_title"
                android:contentDescription="@string/advice_ic_sport_bpm">

            </ImageView>

            <TextView
                android:id="@+id/poor_bpm_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/firacode_medium"
                android:text="@string/advice_sport_bpm"
                android:textColor="@color/app_orange"
                android:textSize="11sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/poor_bpm_img"
                app:layout_constraintEnd_toEndOf="@+id/poor_bpm_img"
                app:layout_constraintStart_toStartOf="@+id/poor_bpm_img"
                app:layout_constraintTop_toTopOf="@+id/poor_bpm_img" />

            <TextView
                android:id="@+id/poor_bpm_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:fontFamily="@font/firacode_bold"
                android:text="@string/advice_sport_bpm_title"
                android:textAllCaps="true"
                android:textColor="@color/app_blue"
                android:textSize="11sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/poor_bpm_img"
                app:layout_constraintStart_toStartOf="@+id/poor_bpm_img"
                app:layout_constraintTop_toBottomOf="@+id/poor_bpm_img" />

            <ImageView
                android:id="@+id/normal_bpm_img"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="20dp"
                android:src="@drawable/bpm_normal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/recommendation_title"
                android:contentDescription="@string/advice_ic_normal_bpm">

            </ImageView>

            <TextView
                android:id="@+id/normal_bpm_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/firacode_medium"
                android:text="@string/advice_normal_bpm"
                android:textColor="@color/app_yellow"
                android:textSize="11sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/normal_bpm_img"
                app:layout_constraintEnd_toEndOf="@+id/normal_bpm_img"
                app:layout_constraintStart_toStartOf="@+id/normal_bpm_img"
                app:layout_constraintTop_toTopOf="@+id/normal_bpm_img" />

            <TextView
                android:id="@+id/normal_bpm_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:fontFamily="@font/firacode_bold"
                android:text="@string/advice_normal_bpm_title"
                android:textAllCaps="true"
                android:textColor="@color/app_blue"
                android:textSize="11sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/normal_bpm_img"
                app:layout_constraintStart_toStartOf="@+id/normal_bpm_img"
                app:layout_constraintTop_toBottomOf="@+id/normal_bpm_img" />

            <ImageView
                android:id="@+id/excellent_bpm_img"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="20dp"
                android:src="@drawable/bpm_excelent"
                app:layout_constraintEnd_toEndOf="@id/recommendation_title"
                app:layout_constraintTop_toBottomOf="@id/recommendation_title"
                android:contentDescription="@string/advice_ic_excellent_bpm">

            </ImageView>

            <TextView
                android:id="@+id/excellent_bpm_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/firacode_medium"
                android:text="@string/advice_excellent_bpm"
                android:textColor="@color/app_yellow"
                android:textSize="11sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/excellent_bpm_img"
                app:layout_constraintEnd_toEndOf="@+id/excellent_bpm_img"
                app:layout_constraintStart_toStartOf="@+id/excellent_bpm_img"
                app:layout_constraintTop_toTopOf="@+id/excellent_bpm_img" />

            <TextView
                android:id="@+id/excellent_bpm_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:fontFamily="@font/firacode_bold"
                android:text="@string/advice_excellent_bpm_title"
                android:textAllCaps="true"
                android:textColor="@color/app_blue"
                android:textSize="11sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/excellent_bpm_img"
                app:layout_constraintStart_toStartOf="@+id/excellent_bpm_img"
                app:layout_constraintTop_toBottomOf="@+id/excellent_bpm_img" />


        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/nav_bar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="50dp"
        android:layout_marginBottom="40dp"
        android:backgroundTint="@color/white"
        app:cardCornerRadius="16dp"
        app:cardElevation="10dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/health_background">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/bpm_bar"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginStart="45dp"
                android:background="@color/white"
                android:src="@drawable/bar_graph"
                android:contentDescription="@string/ic_bpm_screen">

            </ImageView>

            <ImageView
                android:id="@+id/eck_chart"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginHorizontal="55dp"
                android:background="@color/white"
                android:src="@drawable/heartbeat"
                android:contentDescription="@string/ic_main_screen">

            </ImageView>

            <ImageView
                android:id="@+id/health_api"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginEnd="45dp"
                android:background="@color/white"
                android:src="@drawable/lifestyle"
                android:contentDescription="@string/ic_health_screen">

            </ImageView>

        </LinearLayout>


    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>

