<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".activities.MainScreen">

    <ImageView
        android:id="@+id/top_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="450dp"
        android:contentDescription="@string/bubble_top"
        android:src="@drawable/background_top"
        app:layout_constraintBottom_toBottomOf="@+id/heart_rate"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

    </ImageView>

    <ImageButton
        android:id="@+id/logout_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="20dp"
        android:layout_marginHorizontal="20dp"
        android:background="@color/app_red"
        android:src="@drawable/ic_logout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </ImageButton>

    <ImageView
        android:id="@+id/bottom_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="480dp"
        android:contentDescription="@string/logo"
        android:src="@drawable/background_bottom"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/heart_rate">

    </ImageView>

    <androidx.cardview.widget.CardView
        android:id="@+id/heart_rate"
        android:layout_width="match_parent"
        android:layout_height="600dp"
        android:layout_marginHorizontal="50dp"
        android:layout_marginTop="80dp"
        android:backgroundTint="@color/white"
        app:cardCornerRadius="16dp"
        app:cardElevation="10dp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/first_card"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/img_heart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:src="@drawable/heart_beat"
                app:layout_constraintStart_toStartOf="@id/first_card"
                app:layout_constraintTop_toTopOf="@id/first_card">

            </ImageView>

            <TextView
                android:id="@+id/heart_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/firacode_semibold"
                android:gravity="center"
                android:text="--"
                android:textColor="@color/app_orange"
                android:textSize="90sp"
                app:layout_constraintStart_toStartOf="@id/first_card"
                app:layout_constraintTop_toBottomOf="@id/img_heart"

                />

            <TextView
                android:id="@+id/heart_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/firacode_light"
                android:gravity="center"
                android:text="Heart Rate (BPM)"
                android:textColor="@color/app_yellow"
                android:textSize="11sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@id/heart_value"
                app:layout_constraintStart_toStartOf="@id/first_card"

                />

            <TextView
                android:id="@+id/graph_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="50dp"
                android:fontFamily="@font/firacode_regular"
                android:text="Synus Rythm"
                android:textColor="@color/app_yellow"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@id/first_card"
                app:layout_constraintTop_toBottomOf="@id/heart_text"

                />

            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/ecg_chart"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:contextClickable="false"
                app:layout_constraintStart_toStartOf="@id/first_card"
                app:layout_constraintTop_toBottomOf="@id/graph_title"

                >

            </com.github.mikephil.charting.charts.LineChart>

            <androidx.cardview.widget.CardView
                android:id="@+id/custom_button"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginHorizontal="50dp"
                android:backgroundTint="@color/app_orange"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"

                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ecg_chart">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/text_timer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:fontFamily="@font/firacode_regular"
                        android:text="5 sec. to the end ..."
                        android:textColor="@color/app_yellow"
                        android:textSize="11sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">


                    </TextView>

                    <View
                        android:id="@+id/background_imgAdd"
                        android:layout_width="55dp"
                        android:layout_height="0dp"
                        android:layout_marginStart="10dp"
                        android:background="@color/app_yellow"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/text_timer"
                        app:layout_constraintTop_toTopOf="parent">


                    </View>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="15dp"
                        android:minHeight="50dp"
                        android:src="@drawable/ic_add"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="@+id/background_imgAdd"
                        app:layout_constraintStart_toEndOf="@+id/text_timer"
                        app:layout_constraintTop_toTopOf="parent">

                    </ImageView>

                    <View
                        android:id="@+id/background_ready"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/app_yellow"
                        android:visibility="gone"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">


                    </View>

                    <TextView
                        android:id="@+id/text_ready"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:fontFamily="@font/firacode_semibold"
                        android:padding="15dp"
                        android:text="Ready to save"
                        android:textColor="@color/app_orange"
                        android:textSize="11sp"
                        android:visibility="gone"


                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">


                    </TextView>


                </androidx.constraintlayout.widget.ConstraintLayout>


            </androidx.cardview.widget.CardView>

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/nav_bar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="50dp"
        android:backgroundTint="@color/white"
        app:cardCornerRadius="16dp"
        app:cardElevation="10dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/heart_rate">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/bpm_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="45dp"
                android:background="@color/white"
                android:src="@drawable/bar_graph">

            </ImageButton>

            <ImageButton
                android:id="@+id/eck_chart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginHorizontal="55dp"
                android:background="@color/white"

                android:src="@drawable/heartbeat_main">

            </ImageButton>

            <ImageButton
                android:id="@+id/health_api"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="45dp"
                android:background="@color/white"

                android:src="@drawable/lifestyle">

            </ImageButton>

        </LinearLayout>


    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>

