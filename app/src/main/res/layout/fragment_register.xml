<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".fragments.RegisterFragment">

    <ImageView
        android:id="@+id/logo_register"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:contentDescription="@string/logo"
        android:src="@drawable/logo_ecg"
        app:layout_constraintBottom_toTopOf="@+id/password_line"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </ImageView>

    <EditText
        android:id="@+id/input_email_register"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:background="@null"
        android:fontFamily="@font/firacode_regular"
        android:hint="@string/mail"
        android:importantForAutofill="no"
        android:inputType="textEmailSubject"
        android:minHeight="48dp"
        android:textColor="@color/app_orange"
        android:textColorHint="@color/app_yellow"
        android:textSize="16sp"

        app:layout_constraintBottom_toTopOf="@+id/email_line"
        app:layout_constraintEnd_toEndOf="@id/email_line"
        app:layout_constraintStart_toStartOf="@id/email_line">

    </EditText>

    <EditText
        android:id="@+id/input_password_register"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:background="@null"
        android:fontFamily="@font/firacode_regular"
        android:hint="@string/password"
        android:importantForAutofill="no"
        android:inputType="textPassword"
        android:minHeight="48dp"
        android:textColor="@color/app_orange"
        android:textColorHint="@color/app_yellow"
        android:textSize="16sp"

        app:layout_constraintEnd_toEndOf="@id/password_line"
        app:layout_constraintStart_toStartOf="@id/password_line"
        app:layout_constraintTop_toBottomOf="@id/logo_register">

    </EditText>

    <EditText
        android:id="@+id/input_reEnter_password_register"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@null"
        android:fontFamily="@font/firacode_regular"
        android:hint="@string/password_confirm"
        android:importantForAutofill="no"
        android:inputType="textPassword"
        android:minHeight="48dp"
        android:textColor="@color/app_orange"
        android:textColorHint="@color/app_yellow"
        android:textSize="16sp"

        app:layout_constraintEnd_toEndOf="@id/password_line"
        app:layout_constraintStart_toStartOf="@id/password_line"
        app:layout_constraintTop_toBottomOf="@id/password_line">

    </EditText>

    <View
        android:id="@+id/password_line"
        android:layout_width="300dp"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:background="@color/app_red"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/input_password_register" />

    <View
        android:id="@+id/rePassword_line"
        android:layout_width="300dp"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:background="@color/app_red"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/input_reEnter_password_register" />

    <View
        android:id="@+id/email_line"
        android:layout_width="300dp"
        android:layout_height="1dp"
        android:layout_marginBottom="20dp"
        android:background="@color/app_red"
        app:layout_constraintBottom_toTopOf="@+id/input_password_register"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/register_btn"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/app_orange"
        android:fontFamily="@font/firacode_semibold"
        android:text="@string/register"
        android:textColor="@color/app_yellow"
        app:cornerRadius="16dp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rePassword_line">

    </Button>

    <ImageView
        android:id="@+id/register_background_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:contentDescription="@string/logo"
        android:src="@drawable/background_bottom"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/register_btn">

    </ImageView>

    <ImageView
        android:id="@+id/register_to_lView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:contentDescription="@string/ic_login"
        android:src="@drawable/ic_down_arrow"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

    </ImageView>

    <TextView
        android:id="@+id/sign_up_tView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:fontFamily="@font/firacode_light"
        android:text="login"
        android:textColor="@color/white"
        android:textSize="11sp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/register_to_lView">

    </TextView>


</androidx.constraintlayout.widget.ConstraintLayout>